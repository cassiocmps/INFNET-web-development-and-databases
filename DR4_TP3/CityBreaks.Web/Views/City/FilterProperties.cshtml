@model List<CityBreaks.Web.Models.Property>
@{
    ViewData["Title"] = "Filter Properties";
}

<h1>Filter Properties</h1>
<form method="get" asp-action="FilterProperties">
    <div class="row mb-3">
        <div class="col">
            <label for="minPrice" class="form-label">Min Price</label>
            <input type="number" step="0.01" name="minPrice" id="minPrice" class="form-control" value="@ViewBag.MinPrice" />
        </div>
        <div class="col">
            <label for="maxPrice" class="form-label">Max Price</label>
            <input type="number" step="0.01" name="maxPrice" id="maxPrice" class="form-control" value="@ViewBag.MaxPrice" />
        </div>
        <div class="col">
            <label for="cityName" class="form-label">City Name</label>
            <input type="text" name="cityName" id="cityName" class="form-control" value="@ViewBag.CityName" />
        </div>
        <div class="col">
            <label for="propertyName" class="form-label">Property Name</label>
            <input type="text" name="propertyName" id="propertyName" class="form-control" value="@ViewBag.PropertyName" />
        </div>
        <div class="col d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Count > 0)
{
    <h2>Results</h2>
    <ul>
        @foreach (var property in Model)
        {
            <li>
                <strong>@property.Name</strong> - $@property.PricePerNight/night - @property.City.Name
            </li>
        }
    </ul>
}
else
{
    <p>No properties found for the selected filters.</p>
}
