@model List<CityBreaks.Web.Models.City>
@{
    ViewData["Title"] = "Cities";
}

<h2>Cities</h2>
@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var city in Model)
        {
            <li>
                <strong>@city.Name</strong> - @city.Country.CountryName
                <a asp-action="CityDetails" asp-route-name="@city.Name" class="btn btn-link">Details</a>
                <ul>
                    @foreach (var property in city.Properties)
                    {
                        <li>@property.Name - $@property.PricePerNight/night</li>
                    }
                </ul>
            </li>
        }
    </ul>
}
else
{
    <p>No cities found.</p>
}
