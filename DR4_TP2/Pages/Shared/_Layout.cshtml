<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP2 - Web Development with .NET and Databases [25E3_4]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DR4_TP2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary text-white mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">TP2 - Web Development with .NET and Databases [25E3_4]</a>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading px-3 mt-4 mb-1 text-muted">
                        Exercises
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex01_CreateCity">
                                Ex01: Creating a Razor Page with PageModel and BindProperty
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex02_HandlerParameters">
                                Ex02: Model Binding and Handler Parameters
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex03_ServerValidation">
                                Ex03: Server-side Validation with Data Annotations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex04_ClientValidation">
                                Ex04: Client-side Validation with Tag Helpers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex05_ComplexObject">
                                Ex05: Encapsulating Input in Complex Object
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex06_IsoValidation">
                                Ex06: ISO Country Code Validation
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex07_MultipleRecords">
                                Ex07: Working with Multiple Records Simultaneously
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex08_RouteParameters">
                                Ex08: Routing with URL Parameters
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex09_TagHelperUrls">
                                Ex09: Creating URLs with Tag Helpers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex10_FileWrite">
                                Ex10: File Manipulation - Writing
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex11_FileRead">
                                Ex11: File Manipulation - Reading
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ex12_CustomValidation">
                                Ex12: Custom Validation with ModelState
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
