@page
@model Ex01_CreateCityModel
@{
    ViewData["Title"] = "Ex01: Creating a Razor Page with PageModel and BindProperty";
}

<div class="exercise-container">
    <h1>Ex01: Creating a Razor Page with PageModel and BindProperty</h1>
    
    <form method="post">
        <div class="mb-3">
            <label asp-for="CityName" class="form-label">City Name:</label>
            <input asp-for="CityName" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.SubmittedCityName))
    {
        <div class="mt-3 alert alert-success">
            <strong>City submitted:</strong> @Model.SubmittedCityName
        </div>
    }
</div>