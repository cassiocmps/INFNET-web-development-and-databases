@page
@model Ex07_MultipleRecordsModel
@{
    ViewData["Title"] = "Ex07: Working with Multiple Records Simultaneously";
}

<div class="exercise-container">
    <h1>Ex07: Working with Multiple Records Simultaneously</h1>
    
    <form method="post">
        @for (int i = 0; i < Model.Countries.Count; i++)
        {
            <div class="row mb-3 p-3 border rounded">
                <div class="col-md-6">
                    <label asp-for="Countries[i].CountryName" class="form-label">Country @(i + 1) Name:</label>
                    <input asp-for="Countries[i].CountryName" class="form-control" />
                    <span asp-validation-for="Countries[i].CountryName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Countries[i].CountryCode" class="form-label">Country Code:</label>
                    <input asp-for="Countries[i].CountryCode" class="form-control" maxlength="2" style="text-transform: uppercase;" />
                    <span asp-validation-for="Countries[i].CountryCode" class="text-danger"></span>
                </div>
            </div>
        }
        <button type="submit" class="btn btn-primary">Submit All</button>
    </form>

    @if (Model.IsSubmitted && Model.SubmittedCountries.Any())
    {
        <div class="mt-3 alert alert-success">
            <h5>Submitted Countries:</h5>
            <ul>
                @foreach (var country in Model.SubmittedCountries)
                {
                    <li>@country.CountryName (@country.CountryCode)</li>
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}