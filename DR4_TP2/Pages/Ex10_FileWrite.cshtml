@page
@model Ex10_FileWriteModel
@{
    ViewData["Title"] = "Exercise 10 - File Write";
}

<div class="exercise-container">
    <h1>Exercise 10: File Write</h1>
    
    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Content" class="form-label">Note Content:</label>
            <textarea asp-for="Input.Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Input.Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Note</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.SavedFileName))
    {
        <div class="mt-3 alert alert-success">
            <strong>File saved:</strong> @Model.SavedFileName
            <br>
            <a asp-page-handler="Download" asp-route-fileName="@Model.SavedFileName" class="btn btn-sm btn-success mt-2">Download</a>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}